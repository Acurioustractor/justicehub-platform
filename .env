# =============================================================================
# JusticeHub Platform - Default Environment Configuration
# =============================================================================
#
# This file contains SAFE DEFAULTS only - no real credentials!
# Real credentials should be in .env.local (which is gitignored)
#
# Priority order (Next.js):
#   1. .env.local (your real credentials - gitignored)
#   2. .env (this file - safe defaults)
#   3. .env.example (template for reference)
#
# =============================================================================

# -----------------------------------------------------------------------------
# CORE APPLICATION
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=3003
APP_URL=http://localhost:3003
API_URL=http://localhost:3003/api
NEXT_PUBLIC_APP_URL=http://localhost:3003

# -----------------------------------------------------------------------------
# SUPABASE (Required - set real values in .env.local)
# -----------------------------------------------------------------------------
# These are placeholders - your real keys should be in .env.local
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# -----------------------------------------------------------------------------
# AUTH0 (Development placeholders)
# -----------------------------------------------------------------------------
AUTH0_SECRET=development-secret-must-be-at-least-32-characters-long
AUTH0_BASE_URL=http://localhost:3003
AUTH0_ISSUER_BASE_URL=https://dev-placeholder.auth0.com
AUTH0_CLIENT_ID=dev-client-id
AUTH0_CLIENT_SECRET=dev-client-secret
AUTH0_AUDIENCE=http://localhost:3003/api
AUTH0_SCOPE=openid profile email

# -----------------------------------------------------------------------------
# AI SERVICES (Optional - set real values in .env.local)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
PERPLEXITY_API_KEY=
GOOGLE_API_KEY=

# -----------------------------------------------------------------------------
# EXTERNAL SERVICES (Optional - set real values in .env.local)
# -----------------------------------------------------------------------------
FIRECRAWL_API_KEY=
SENDGRID_API_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=

# -----------------------------------------------------------------------------
# EMPATHY LEDGER (Optional multi-tenant)
# -----------------------------------------------------------------------------
EMPATHY_LEDGER_URL=
EMPATHY_LEDGER_ANON_KEY=

# -----------------------------------------------------------------------------
# MODULE-SPECIFIC (Optional)
# -----------------------------------------------------------------------------
YJSF_SUPABASE_URL=
YJSF_SUPABASE_ANON_KEY=
YJSF_SUPABASE_SERVICE_KEY=
QJT_SUPABASE_URL=
QJT_SUPABASE_ANON_KEY=
QJT_SUPABASE_SERVICE_KEY=

# -----------------------------------------------------------------------------
# SECURITY DEFAULTS
# -----------------------------------------------------------------------------
SESSION_SECRET=development-session-secret-at-least-32-characters
ENCRYPTION_KEY=development-encryption-key-at-least-32-chars
JWT_SECRET=development-jwt-secret-at-least-32-characters
CORS_ORIGIN=http://localhost:3003

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
ENABLE_AI_INSIGHTS=false
ENABLE_SERVICE_FINDER=true
ENABLE_BUDGET_TRACKER=true
ENABLE_WEB_SCRAPING=false
ENABLE_AIRTABLE_SYNC=false
ENABLE_PAYMENT_PROCESSING=false
ENABLE_SMS_NOTIFICATIONS=false

# -----------------------------------------------------------------------------
# DEVELOPMENT
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FORMAT=text
NEXT_TELEMETRY_DISABLED=1
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
