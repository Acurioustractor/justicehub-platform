  "data_extraction": {
    "required_fields": [
      "name",
      "funder_name",
      "source_type",
      "deadline",
      "source_url"
    ],
    "optional_fields": [
      "description",
      "total_pool_amount",
      "min_grant_amount",
      "max_grant_amount",
      "eligibility_criteria",
      "focus_areas",
      "jurisdictions",
      "application_url",
      "guidelines_url"
    ],
    "auto_categorize": {
      "youth_justice": ["youth", "juvenile", "young people", "justice", "diversion"],
      "indigenous_programs": ["indigenous", "aboriginal", "first nations", "torres strait"],
      "mental_health": ["mental health", "wellbeing", "psychological"],
      "education": ["education", "training", "skills", "learning"],
      "employment": ["employment", "jobs", "workforce", "career"],
      "housing": ["housing", "accommodation", "homelessness"],
      "family_services": ["family", "parent", "carer", "kinship"],
      "community_development": ["community", "place-based", "local"]
    }
  },
  "matching": {
    "enabled": true,
    "algorithm": "relevance_score",
    "factors": [
      {
        "name": "category_match",
        "weight": 0.4,
        "description": "How well the funding category matches youth justice focus"
      },
      {
        "name": "jurisdiction_match",
        "weight": 0.3,
        "description": "Whether the funder supports the basecamp's region"
      },
      {
        "name": "amount_fit",
        "weight": 0.2,
        "description": "Is the grant size appropriate for the program"
      },
      {
        "name": "historical_success",
        "weight": 0.1,
        "description": "Past success rate with this funder"
      }
    ]
  },
  "notifications": {
    "closing_soon_days": 14,
    "new_opportunity_alert": true,
    "weekly_digest": true,
    "digest_day": "monday"
  }
}
