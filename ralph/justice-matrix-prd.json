  "extraction_patterns": {
    "case": {
      "required_fields": ["jurisdiction", "case_citation", "year", "court", "strategic_issue", "key_holding"],
      "optional_fields": ["authoritative_link", "categories", "outcome", "precedent_strength", "lat", "lng", "country_code"],
      "ai_extraction": {
        "prompt": "Extract the following from this legal case: citation, year, court name, jurisdiction, main legal issue, key holding/decision, and outcome (favorable/adverse/pending for child rights). Also identify categories from: non-refoulement, detention-conditions, due-process, pushbacks, third-country-transfers, asylum-access, family-separation, hearing-rights."
      }
    },
    "campaign": {
      "required_fields": ["country_region", "campaign_name", "lead_organizations", "goals"],
      "optional_fields": ["notable_tactics", "outcome_status", "campaign_link", "is_ongoing", "start_year", "end_year", "categories", "lat", "lng", "country_code"],
      "ai_extraction": {
        "prompt": "Extract the following from this advocacy campaign: name, lead organizations, geographic focus, main goals, tactics used, current status (ongoing/completed), and start/end years if known."
      }
    }
  },
  "quality_signals": {
    "relevance": {
      "weight": 30,
      "description": "Is this about youth justice, child rights, or juvenile detention?"
    },
    "precedent_value": {
      "weight": 25,
      "description": "How significant is this for future cases/campaigns?"
    },
    "geographic_coverage": {
      "weight": 20,
      "description": "Does it fill a gap in regional coverage?"
    },
    "recency": {
      "weight": 15,
      "description": "How recent and current is this?"
    },
    "actionability": {
      "weight": 10,
      "description": "How useful is this for practitioners?"
    }
  },
  "sacred_boundaries": {
    "never_scrape": [
      "Individual case files with identifying info",
      "Sealed juvenile court records",
      "Private communications",
      "Paywalled content without permission"
    ],
    "always_mark": [
      "Indigenous rights cases",
      "First Nations advocacy",
      "Community-controlled campaigns"
    ],
    "always_check": [
      "Publication permissions",
      "Sensitive case details",
      "Child privacy protections"
    ]
  }
}
