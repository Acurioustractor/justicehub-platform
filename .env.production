# JusticeHub Production Environment Template
# DO NOT commit this file with real values
# Use your deployment platform's environment variable system

# Application
NODE_ENV=production
APP_URL=https://justicehub.org
API_URL=https://justicehub.org/api
PORT=3000

# Auth0 Production
AUTH0_SECRET=${AUTH0_SECRET}
AUTH0_BASE_URL=https://justicehub.org
AUTH0_ISSUER_BASE_URL=${AUTH0_ISSUER_BASE_URL}
AUTH0_CLIENT_ID=${AUTH0_CLIENT_ID}
AUTH0_CLIENT_SECRET=${AUTH0_CLIENT_SECRET}
AUTH0_AUDIENCE=https://justicehub.org/api
AUTH0_SCOPE=openid profile email

# Database - Production Supabase
SUPABASE_URL=${SUPABASE_URL}
SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}
SUPABASE_SERVICE_KEY=${SUPABASE_SERVICE_KEY}

# Redis Production
REDIS_URL=${REDIS_URL}
CACHE_TTL=7200

# AI Services
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
PERPLEXITY_API_KEY=${PERPLEXITY_API_KEY}

# Web Scraping
FIRECRAWL_API_KEY=${FIRECRAWL_API_KEY}

# AWS Production
AWS_REGION=ap-southeast-2
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_S3_BUCKET=justicehub-media-prod
AWS_S3_REGION=ap-southeast-2
AWS_CLOUDFRONT_DOMAIN=${AWS_CLOUDFRONT_DOMAIN}

# External APIs
AIRTABLE_API_KEY=${AIRTABLE_API_KEY}
AIRTABLE_BASE_ID=${AIRTABLE_BASE_ID}
AIRTABLE_STORIES_TABLE=Stories

# Communication
SENDGRID_API_KEY=${SENDGRID_API_KEY}
SENDGRID_FROM_EMAIL=noreply@justicehub.org
SENDGRID_FROM_NAME=JusticeHub

TWILIO_ACCOUNT_SID=${TWILIO_ACCOUNT_SID}
TWILIO_AUTH_TOKEN=${TWILIO_AUTH_TOKEN}
TWILIO_PHONE_NUMBER=${TWILIO_PHONE_NUMBER}

# Payment
STRIPE_PUBLIC_KEY=${STRIPE_PUBLIC_KEY}
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}

# Analytics
GOOGLE_ANALYTICS_ID=${GOOGLE_ANALYTICS_ID}
MIXPANEL_TOKEN=${MIXPANEL_TOKEN}

# Security
SESSION_SECRET=${SESSION_SECRET}
ENCRYPTION_KEY=${ENCRYPTION_KEY}
JWT_SECRET=${JWT_SECRET}
CORS_ORIGIN=https://justicehub.org

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=warn
LOG_FORMAT=json

# Feature Flags
ENABLE_AIRTABLE_SYNC=true
ENABLE_AI_INSIGHTS=true
ENABLE_PAYMENT_PROCESSING=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_SERVICE_FINDER=true
ENABLE_BUDGET_TRACKER=true
ENABLE_WEB_SCRAPING=true

# Module Configuration
YJSF_SUPABASE_URL=${SUPABASE_URL}
YJSF_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}
YJSF_SUPABASE_SERVICE_KEY=${SUPABASE_SERVICE_KEY}

QJT_SUPABASE_URL=${SUPABASE_URL}
QJT_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}
QJT_SUPABASE_SERVICE_KEY=${SUPABASE_SERVICE_KEY}

# Development Tools
NEXT_TELEMETRY_DISABLED=1

# Web Scraping Configuration
PUPPETEER_SKIP_DOWNLOAD=true
PUPPETEER_HEADLESS=true
SCRAPER_USER_AGENT=JusticeHub-Bot/1.0
SCRAPER_DELAY_MS=2000
SCRAPER_TIMEOUT_MS=60000