# JusticeHub Development Environment
# This file contains safe defaults for development
# Copy values from here to .env.local and customize as needed

# Application
NODE_ENV=development
APP_URL=http://localhost:3003
API_URL=http://localhost:3003/api
PORT=3003

# Auth0 (Development defaults - replace with your values)
AUTH0_SECRET=development-secret-at-least-32-characters-long-for-session-security
AUTH0_BASE_URL=http://localhost:3003
AUTH0_ISSUER_BASE_URL=https://dev-placeholder.auth0.com
AUTH0_CLIENT_ID=dev-client-id-replace-me
AUTH0_CLIENT_SECRET=dev-client-secret-replace-me
AUTH0_AUDIENCE=http://localhost:3003/api
AUTH0_SCOPE=openid profile email

# Database - Replace with your Supabase project details
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
CACHE_TTL=3600

# AI Services (Optional but recommended)
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
PERPLEXITY_API_KEY=your-perplexity-key-here

# Web Scraping (Optional)
FIRECRAWL_API_KEY=fc-your-firecrawl-key-here

# AWS (Optional - for file uploads)
AWS_REGION=ap-southeast-2
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=justicehub-media-dev
AWS_S3_REGION=ap-southeast-2

# External APIs (Optional)
AIRTABLE_API_KEY=your-airtable-key
AIRTABLE_BASE_ID=your-airtable-base-id
AIRTABLE_STORIES_TABLE=Stories

# Communication (Optional)
SENDGRID_API_KEY=SG.your-sendgrid-key
SENDGRID_FROM_EMAIL=noreply@localhost
SENDGRID_FROM_NAME=JusticeHub Dev

TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment (Optional)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# Security
SESSION_SECRET=development-session-secret-min-32-chars
ENCRYPTION_KEY=development-encryption-key-min-32-chars
JWT_SECRET=development-jwt-secret-minimum-32-chars
CORS_ORIGIN=http://localhost:3003

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=info
LOG_FORMAT=text

# Feature Flags
ENABLE_AIRTABLE_SYNC=false
ENABLE_AI_INSIGHTS=true
ENABLE_PAYMENT_PROCESSING=false
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_SERVICE_FINDER=true
ENABLE_BUDGET_TRACKER=true
ENABLE_WEB_SCRAPING=false

# Module Configuration (Use main Supabase by default)
YJSF_SUPABASE_URL=https://your-project-ref.supabase.co
YJSF_SUPABASE_ANON_KEY=your-anon-key-here

QJT_SUPABASE_URL=https://your-project-ref.supabase.co
QJT_SUPABASE_ANON_KEY=your-anon-key-here

# Development Tools
NEXT_TELEMETRY_DISABLED=1

# Web Scraping Configuration
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser
PUPPETEER_SKIP_DOWNLOAD=true
PUPPETEER_HEADLESS=true
SCRAPER_USER_AGENT=JusticeHub-Bot/1.0
SCRAPER_DELAY_MS=1000
SCRAPER_TIMEOUT_MS=30000