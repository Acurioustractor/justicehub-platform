# JusticeHub Platform Environment Variables
# Copy this file to .env.local and fill in your values

# Application
NODE_ENV=development
APP_URL=http://localhost:3003
API_URL=http://localhost:3003/api
PORT=3003

# Auth0 Configuration
AUTH0_SECRET='use [openssl rand -hex 32] to generate a secret'
AUTH0_BASE_URL='http://localhost:3003'
AUTH0_ISSUER_BASE_URL='https://YOUR_AUTH0_DOMAIN.auth0.com'
AUTH0_CLIENT_ID='YOUR_AUTH0_CLIENT_ID'
AUTH0_CLIENT_SECRET='YOUR_AUTH0_CLIENT_SECRET'
AUTH0_AUDIENCE='YOUR_AUTH0_AUDIENCE'
AUTH0_SCOPE='openid profile email'

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/justicehub
DATABASE_POOL_SIZE=10

# Supabase Configuration (Main JusticeHub Database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
CACHE_TTL=3600

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_S3_BUCKET=justicehub-media
AWS_S3_REGION=us-east-1
AWS_CLOUDFRONT_DOMAIN=

# Airtable Configuration
AIRTABLE_API_KEY=YOUR_AIRTABLE_API_KEY
AIRTABLE_BASE_ID=YOUR_AIRTABLE_BASE_ID
AIRTABLE_STORIES_TABLE=Stories

# MCP Server Configuration
MCP_SERVER_URL=http://localhost:3001
MCP_SERVER_PORT=3001

# Email Configuration (SendGrid)
SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY
SENDGRID_FROM_EMAIL=noreply@justicehub.org
SENDGRID_FROM_NAME=JusticeHub

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
TWILIO_PHONE_NUMBER=+1234567890

# Payment Configuration (Stripe)
STRIPE_PUBLIC_KEY=pk_test_YOUR_STRIPE_PUBLIC_KEY
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_STRIPE_WEBHOOK_SECRET

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=YOUR_MIXPANEL_TOKEN

# Security
SESSION_SECRET='use [openssl rand -hex 32] to generate a secret'
ENCRYPTION_KEY='use [openssl rand -hex 32] to generate a key'
JWT_SECRET='use [openssl rand -hex 32] to generate a secret'
CORS_ORIGIN=http://localhost:3003

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Youth Justice Service Finder Module
YJSF_SUPABASE_URL=https://your-yjsf-project.supabase.co
YJSF_SUPABASE_ANON_KEY=your-yjsf-anon-key
YJSF_SUPABASE_SERVICE_KEY=your-yjsf-service-key
YJSF_DATABASE_URL=postgresql://postgres:password@localhost:5432/youth_services
YJSF_ELASTICSEARCH_URL=http://localhost:9200
YJSF_REDIS_URL=redis://localhost:6379
YJSF_FIRECRAWL_API_KEY=YOUR_FIRECRAWL_API_KEY
YJSF_GEOCODING_API_KEY=YOUR_GEOCODING_API_KEY

# QLD Justice Tracker Module
QJT_SUPABASE_URL=https://your-qjt-project.supabase.co
QJT_SUPABASE_ANON_KEY=your-qjt-anon-key
QJT_SUPABASE_SERVICE_KEY=your-qjt-service-key
QJT_FIRECRAWL_API_KEY=YOUR_FIRECRAWL_API_KEY
QJT_PARLIAMENT_API_KEY=YOUR_PARLIAMENT_API_KEY

# Web Scraping Configuration (for both modules)
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser
PUPPETEER_SKIP_DOWNLOAD=true
PUPPETEER_HEADLESS=true
SCRAPER_USER_AGENT=JusticeHub-Bot/1.0
SCRAPER_DELAY_MS=1000
SCRAPER_TIMEOUT_MS=30000

# Feature Flags
ENABLE_AIRTABLE_SYNC=true
ENABLE_AI_INSIGHTS=false
ENABLE_PAYMENT_PROCESSING=false
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_SERVICE_FINDER=true
ENABLE_BUDGET_TRACKER=true
ENABLE_WEB_SCRAPING=false

# Development Tools
NEXT_TELEMETRY_DISABLED=1