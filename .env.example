# =============================================================================
# JusticeHub Platform - Environment Configuration
# =============================================================================
#
# Copy this file to .env.local and fill in your values.
# See src/lib/env.ts for runtime validation of these variables.
#
# IMPORTANT: Never commit .env.local or any file containing real credentials!
#
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED VARIABLES (Application will fail without these)
# -----------------------------------------------------------------------------

# Application Environment
NODE_ENV=development

# Application URL (used for redirects, OAuth callbacks, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3003

# Port (default: 3003)
PORT=3003

# -----------------------------------------------------------------------------
# SUPABASE - MAIN DATABASE (Required)
# -----------------------------------------------------------------------------
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

# Public URL and key (exposed to browser - safe to share)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Service role key (server-only - NEVER expose to browser!)
# Only needed for admin operations that bypass RLS
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Legacy aliases (optional - for backwards compatibility)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key

# -----------------------------------------------------------------------------
# SUPABASE - EMPATHY LEDGER (Optional - Multi-tenant storytelling)
# -----------------------------------------------------------------------------
# Only needed if using Empathy Ledger features

EMPATHY_LEDGER_URL=https://your-empathy-ledger.supabase.co
EMPATHY_LEDGER_ANON_KEY=your-empathy-ledger-anon-key

# -----------------------------------------------------------------------------
# SUPABASE - MODULE-SPECIFIC (Optional)
# -----------------------------------------------------------------------------
# Youth Justice Service Finder module
YJSF_SUPABASE_URL=https://your-yjsf-project.supabase.co
YJSF_SUPABASE_ANON_KEY=your-yjsf-anon-key
YJSF_SUPABASE_SERVICE_KEY=your-yjsf-service-key

# QLD Justice Tracker module
QJT_SUPABASE_URL=https://your-qjt-project.supabase.co
QJT_SUPABASE_ANON_KEY=your-qjt-anon-key
QJT_SUPABASE_SERVICE_KEY=your-qjt-service-key

# -----------------------------------------------------------------------------
# DATABASE - DIRECT CONNECTION (Optional)
# -----------------------------------------------------------------------------
# Only needed for direct PostgreSQL connections (migrations, etc.)
DATABASE_URL=postgresql://postgres:password@localhost:5432/justicehub

# -----------------------------------------------------------------------------
# AI SERVICES (Optional)
# -----------------------------------------------------------------------------

# OpenAI - For AI features (must start with 'sk-')
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic Claude - For AI features (must start with 'sk-ant-')
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Perplexity - For research features
PERPLEXITY_API_KEY=your-perplexity-api-key

# -----------------------------------------------------------------------------
# EXTERNAL SERVICES (Optional)
# -----------------------------------------------------------------------------

# Firecrawl - For web scraping (must start with 'fc-')
FIRECRAWL_API_KEY=fc-your-firecrawl-api-key

# SendGrid - For email (must start with 'SG.')
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@justicehub.org

# Google Analytics (must start with 'G-')
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# -----------------------------------------------------------------------------
# NOTION (Legacy - being phased out)
# -----------------------------------------------------------------------------

NOTION_API_TOKEN=your-notion-api-token
NOTION_NOMINATION_DB_ID=your-nomination-database-id
NOTION_BOOKING_DB_ID=your-booking-database-id

# Campaign settings
CAMPAIGN_END_DATE=2025-10-22
INITIAL_NOMINATION_COUNT=1247
INITIAL_SLOT_TOTAL=24

# -----------------------------------------------------------------------------
# FEATURE FLAGS (Optional)
# -----------------------------------------------------------------------------

ENABLE_AI_INSIGHTS=false
ENABLE_SERVICE_FINDER=true
ENABLE_BUDGET_TRACKER=true
ENABLE_WEB_SCRAPING=false

# -----------------------------------------------------------------------------
# DEVELOPMENT TOOLS (Optional)
# -----------------------------------------------------------------------------

# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# Log level (debug, info, warn, error)
LOG_LEVEL=info
