# JusticeHub Platform - Docker Environment Variables
# This file is used when running with docker-compose

# Application
NODE_ENV=development
APP_URL=http://localhost:3002
API_URL=http://localhost:3002/api
PORT=3000

# Auth0 Configuration (Development bypass enabled)
AUTH0_SECRET='development-secret-not-for-production'
AUTH0_BASE_URL='http://localhost:3002'
AUTH0_ISSUER_BASE_URL='https://dev-placeholder.auth0.com'
AUTH0_CLIENT_ID='dev-client-id'
AUTH0_CLIENT_SECRET='dev-client-secret'
AUTH0_AUDIENCE='http://localhost:3002/api'
AUTH0_SCOPE='openid profile email'

# Database (PostgreSQL) - Docker internal networking
DATABASE_URL=postgresql://user:pass@db:5432/justicehub
DATABASE_POOL_SIZE=10

# Redis Configuration - Docker internal networking
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
CACHE_TTL=3600

# AWS Configuration (Mock for development)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=dev-access-key
AWS_SECRET_ACCESS_KEY=dev-secret-key
AWS_S3_BUCKET=justicehub-media-dev
AWS_S3_REGION=us-east-1
AWS_CLOUDFRONT_DOMAIN=

# Airtable Configuration
AIRTABLE_API_KEY=dev-airtable-key
AIRTABLE_BASE_ID=dev-base-id
AIRTABLE_STORIES_TABLE=Stories

# MCP Server Configuration - Docker internal networking
MCP_SERVER_URL=http://mcp-server:3001
MCP_SERVER_PORT=3001

# Email Configuration (Mock for development)
SENDGRID_API_KEY=dev-sendgrid-key
SENDGRID_FROM_EMAIL=dev@justicehub.org
SENDGRID_FROM_NAME=JusticeHub Dev

# SMS Configuration (Mock for development)
TWILIO_ACCOUNT_SID=dev-twilio-sid
TWILIO_AUTH_TOKEN=dev-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Configuration (Mock for development)
STRIPE_PUBLIC_KEY=pk_test_dev_key
STRIPE_SECRET_KEY=sk_test_dev_key
STRIPE_WEBHOOK_SECRET=whsec_dev_secret

# Analytics (Development)
GOOGLE_ANALYTICS_ID=G-DEV123456
MIXPANEL_TOKEN=dev-mixpanel-token

# Security
SESSION_SECRET='development-session-secret-docker'
ENCRYPTION_KEY='development-encryption-key-docker'
JWT_SECRET='development-jwt-secret-docker'
CORS_ORIGIN=http://localhost:3002

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
ENABLE_AIRTABLE_SYNC=true
ENABLE_AI_INSIGHTS=true
ENABLE_PAYMENT_PROCESSING=false
ENABLE_SMS_NOTIFICATIONS=false

# AI Configuration (Add your real OpenAI key here if you want AI features)
OPENAI_API_KEY=your-openai-key-here

# Development Tools
NEXT_TELEMETRY_DISABLED=1

# Docker specific
WATCHPACK_POLLING=true